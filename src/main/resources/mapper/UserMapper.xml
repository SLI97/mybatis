<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sli.mapper.UserMapper">

    <!-- 根据uid查询一个用户信息 -->
    <select id="selectUserById" parameterType="Integer"
            resultType="com.sli.entity.User">
        select * from user where id = #{hahaid}
    </select>
    <!-- 查询所有用户信息 -->
    <select id="selectAllUser" resultType="com.sli.entity.User">
        select * from user
    </select>
    <!-- 添加一个用户，#{uname}为 com.mybatis.po.MyUser 的属性值 -->
    <insert id="addUser" parameterType="com.sli.entity.User">
        insert into user (name,age,email)
        values(#{param1},#{param2},#{param3})
    </insert>
    <!--修改一个用户 -->
    <update id="updateUser" parameterType="com.sli.entity.User">
        update user set name =
        #{name},age = #{age},email = #{email} where id = #{id}
    </update>
    <!-- 删除一个用户 -->
    <delete id="deleteUser" parameterType="Integer">
        delete from user where id
        = #{id}
    </delete>

</mapper>